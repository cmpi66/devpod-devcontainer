{
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/w3cj/devcontainer-features/firewall:latest": {}
  },
 "containerEnv": {
    "ENV_REPO_NAME": "devpod-devcontainer"
  },
  "workspaceMount": "source=${localEnv:HOME}/.local/.src/project-1,target=/workspace,type=bind",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "bash -lc '/workspaces/$ENV_REPO_NAME/scripts/setup'"
}
